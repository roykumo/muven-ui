<Page x:Class="CakeGUI.forms.ProductStock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CakeGUI.forms"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ProductStock" Width="800" Height="600">

    <Border Padding="10">
        <StackPanel HorizontalAlignment="Left" Height="580" VerticalAlignment="Top" Width="780">
            <TextBlock TextWrapping="Wrap" Text="Stock Barang" FontSize="18" TextDecorations="Underline" FontWeight="Bold"/>

            <Grid>
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="0,13,0,-554" ItemsSource="{Binding products}" IsReadOnly="True" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Product.Name}" HeaderStringFormat="" Header="Barang" Foreground="#FF1800FF">
                            <DataGridTextColumn.CellStyle>
                                <Style>
                                    <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                        Handler="ProductNameClicked" />
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Product.BarCode}" Header="Barcode"/>
                        <DataGridTextColumn Binding="{Binding Quantity}" Header="Jumlah (sisa)"/>
                        <DataGridTextColumn Binding="{Binding ExpiredDate, StringFormat=\{0:yyyy-MM-dd\}}" Header="Kadaluarsa (terdekat)"/>
                        <DataGridTextColumn Binding="{Binding BuyPrice}" Header="Harga Beli (rata-rata)"/>
                        <DataGridTextColumn Binding="{Binding SellPrice}" Header="Harga Jual (yang berlaku)"/>
                        <DataGridTextColumn Binding="{Binding Product.Alerts}" Header="Expiry Notification"/>
                    </DataGrid.Columns>

                </DataGrid>
            </Grid>
        </StackPanel>
    </Border>
</Page>
