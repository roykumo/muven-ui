<Page x:Class="CakeGUI.forms.Damage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CakeGUI.forms"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="ProductInventoryList" Width="800" Height="780">

    <Border Padding="10">
        <StackPanel HorizontalAlignment="Left" Height="760" VerticalAlignment="Top" Width="780" Margin="0.4,0.4,-0.4,-0.4">
            <Label Content="Title" Name="lblSiteMap"/>
            <TextBlock x:Name="lblTitle" TextWrapping="Wrap" Text="Penjualan Online / Grosir" FontSize="18" TextDecorations="Underline" FontWeight="Bold"/>
            <materialDesign:Card Margin="0 10" Padding=" 10 0 10 10">
                <StackPanel>
                    <Grid Height="95" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="0" x:Name="lblProductType" TextWrapping="Wrap" Text="JENIS BARANG" FontSize="14" FontWeight="Bold" />
                        <ComboBox x:Name="cmbType" Grid.Column="1" Grid.Row="0" Height="30" SelectedValuePath="Id" FontSize="14" DisplayMemberPath="Description" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" SelectionChanged="cmbType_SelectionChanged"/>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="1" x:Name="lblTransactionCode" TextWrapping="Wrap" Text="KODE TRANSAKSI" FontSize="14" FontWeight="Bold" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Grid.Row="1" x:Name="txtTransactionCode" TextWrapping="Wrap" Text="" FontSize="14" FontWeight="Bold" />

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="2" x:Name="lblTransactionDateOut" TextWrapping="Wrap" Text="TGL BARANG KELUAR" FontSize="14" FontWeight="Bold" />
                        <DatePicker Grid.Column="1" Grid.Row="2" Name="dateOut" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False"/>
                        
                        <!--<TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Barcode" FontSize="14" FontWeight="Bold" />
                        <TextBox x:Name="txtBarcode" Grid.Column="1" Grid.Row="2" Width="200" HorizontalAlignment="Left"/>-->
                        <Button x:Name="btnAddOut" Height="20" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="5" Grid.Row="2" Content="TAMBAH BARANG" FontSize="8" Click="btnAddOut_Click"/>
                    </Grid>
                    <Grid Margin="0 5 0 0">
                        <DataGrid x:Name="dataGridOut" AutoGenerateColumns="False" ItemsSource="{Binding inventories}" IsReadOnly="True">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="LightSkyBlue" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Top" />
                                    <Setter Property="Height" Value="50" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Product.BarCode}" ClipboardContentBinding="{x:Null}" Header="BARCODE 2"  />
                                <DataGridTextColumn Binding="{Binding Product.Name}" HeaderStringFormat="" Header="NAMA BARANG" Foreground="Black"  />
                                <DataGridTextColumn Binding="{Binding Quantity}" Header="JUMLAH BARANG YG DIHAPUS"  ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding PurchasePrice, StringFormat=\{0:n0\}}" Header="HARGA BELI RATA-RATA" TextBlock.TextAlignment="Center"  Width="115" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding SellPrice.SellingPrice, StringFormat=\{0:n0\}}" Header="HARGA JUAL (TERAKHIR)" TextBlock.TextAlignment="Center"  Width="90" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTemplateColumn Header=" ">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Grid.Row="0" Grid.Column="1" Content="{Binding SellPrice.SaleText}" Background="{Binding SellPrice.SaleColor}" FontSize="9" VerticalContentAlignment="Stretch" Height="20" Width="40"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding Remarks}" Header="KETERANGAN BARANG"  />
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                                Handler="EditItemOutClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="ubah" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                                Handler="DeleteItemOutClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="hapus" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Height="90" Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="btnConfirm" Grid.Column="2" Grid.Row="2" Content="Hapus Barang" Width="100" Height="25" FontSize="10" Click="btnConfirm_Click"/>
                        <Button x:Name="btnCancel" Grid.Column="3" Grid.Row="2" Content="Batal" Width="100" Height="25" FontSize="10" Click="btnCancel_Click"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            <!--<Grid Height="30" Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Button x:Name="btnConfirm" Height="30" Grid.Column="0" Grid.Row="0" Content="Next" Click="btnConfirm_Click"/>
                <Button x:Name="btnCancel" Height="30" Grid.Column="2" Grid.Row="0" Content="Cancel" Click="btnCancel_Click"/>
            </Grid>-->
        </StackPanel>
    </Border>
</Page>
