<Page x:Class="CakeGUI.forms.InventoryOut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CakeGUI.forms"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="ProductInventoryList" Width="800" Height="780">

    <Border Padding="10">
        <StackPanel HorizontalAlignment="Left" Height="760" VerticalAlignment="Top" Width="780" Margin="0.4,0.4,-0.4,-0.4">
            <Label Content="Title" Name="lblSiteMap"/>
            <TextBlock x:Name="lblTitle" TextWrapping="Wrap" Text="Repacking" FontSize="18" TextDecorations="Underline" FontWeight="Bold"/>
            <materialDesign:Card  Height="40">
                <StackPanel>
                    <Grid Height="30" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <TextBlock Padding="10 0 0 0" Grid.Column="0" VerticalAlignment="Center" Grid.Row="0" x:Name="lblProductType" TextWrapping="Wrap" Text="Jenis Barang" FontSize="14" FontWeight="Bold" />
                        <ComboBox x:Name="cmbType" Grid.Column="1" Grid.Row="0" Height="30" SelectedValuePath="Id" FontSize="14" DisplayMemberPath="Description" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" SelectionChanged="cmbType_SelectionChanged"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="0 10" Padding=" 10 0 10 10">
                <StackPanel>
                    <Label Content="Barang Keluar" FontWeight="Bold"/>
                    <Grid Height="90" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <!--
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="0" x:Name="lblProductType" TextWrapping="Wrap" Text="Jenis Barang" FontSize="14" FontWeight="Bold" />
                        <ComboBox x:Name="cmbType" Grid.Column="1" Grid.Row="0" Height="30" SelectedValuePath="Id" FontSize="14" DisplayMemberPath="Description" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" SelectionChanged="cmbType_SelectionChanged"/>
                        -->
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="1" x:Name="lblTransactionDateOut" TextWrapping="Wrap" Text="Tanggal Keluar" FontSize="14" FontWeight="Bold" />
                        <DatePicker Grid.Column="1" Grid.Row="1" Name="dateOut" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsEnabled="False"/>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="0" x:Name="lblTransactionCodeOut" TextWrapping="Wrap" Text="Kode Transaksi" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="txtTransactionCodeOut" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

                        <Button x:Name="btnAddOut" Height="20" Width="100" HorizontalAlignment="Right" Grid.Column="5" Grid.Row="2" Content="Tambah" FontSize="10" Click="btnAddOut_Click"/>
                    </Grid>
                    <Grid >
                        <DataGrid x:Name="dataGridOut" AutoGenerateColumns="False" ItemsSource="{Binding inventories}" IsReadOnly="True">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="LightSkyBlue" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Top" />
                                    <Setter Property="Height" Value="50" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Product.BarCode}" ClipboardContentBinding="{x:Null}" Header="BARCODE 2"  />
                                <DataGridTextColumn Binding="{Binding Product.Name}" HeaderStringFormat="" Header="NAMA BARANG" Foreground="Black"  />
                                <DataGridTextColumn Binding="{Binding Quantity}" Header="JUMLAH BARANG"  ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding PurchasePrice, StringFormat=\{0:n0\}}" Header="HARGA BELI RATA2" TextBlock.TextAlignment="Center"  Width="115" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding SellPrice.SellingPrice, StringFormat=\{0:n0\}}" Header="HARGA JUAL TERAKHIR" TextBlock.TextAlignment="Center"  Width="90" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTemplateColumn Header="">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Grid.Row="0" Grid.Column="1" Content="{Binding SellPrice.SaleText}" Background="{Binding SellPrice.SaleColor}" FontSize="9" VerticalContentAlignment="Stretch" Height="20" Width="40"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding Remarks}" Header="KETERANGAN BARANG"  />
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                                Handler="EditItemOutClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="ubah" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                                Handler="DeleteItemOutClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="hapus" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Margin="0 0" Padding=" 10 0 10 10">
                <StackPanel>
                    <Label Content="Barang Masuk" FontWeight="Bold"/>
                    <Grid Height="120" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="0" x:Name="lblSupplier" TextWrapping="Wrap" Text="Supplier" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="txtSupplier" IsEnabled="False" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="1" x:Name="lblTransactionCode" TextWrapping="Wrap" Text="Kode Transaksi" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="txtTransactionCode" IsEnabled="False" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Grid.Row="2" x:Name="lblTransactionDate" TextWrapping="Wrap" Text="Tanggal Masuk" FontSize="14" FontWeight="Bold"/>
                        <DatePicker Grid.Column="1" Grid.Row="2" Name="date" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False"/>

                        <Button x:Name="btnAdd" Grid.Column="5" Grid.Row="3" Height="20" Width="100" HorizontalAlignment="Right" Content="Tambah" FontSize="10" Click="btnAdd_Click"/>
                    </Grid>
                    <Grid Margin="0 0">
                        <DataGrid x:Name="dataGridIn" AutoGenerateColumns="False" ItemsSource="{Binding inventories}" IsReadOnly="True" >
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="LightSkyBlue" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Top" />
                                    <Setter Property="Height" Value="50" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Product.BarCode}" ClipboardContentBinding="{x:Null}" Header="BARCODE 2"  />
                                <DataGridTextColumn Binding="{Binding Product.Name}" HeaderStringFormat="" Header="NAMA BARANG" Foreground="Black"  />
                                <DataGridTextColumn Binding="{Binding Quantity}" Header="JUMLAH AWAL"  ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding ExpiredDate, StringFormat=\{0:MMM-yy\}}" Header="TANGGAL KADALUARSA / AGING" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding Price, StringFormat=\{0:n0\}}" Header="HARGA BELI SATUAN" TextBlock.TextAlignment="Center"  Width="120" ElementStyle="{StaticResource TextRightAligned}"  />
                                <DataGridTextColumn Binding="{Binding Remarks}" Header="KETERANGAN BARANG"  />
                                <!--<DataGridTextColumn Binding="{Binding PurchaseDate, StringFormat=\{0:yyyy-MM-dd\}}" Header="Tanggal Barang Masuk"/>-->
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                        Handler="EditItemClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="ubah" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="DataGridCell.MouseLeftButtonDown"
                                        Handler="DeleteItemClicked" />
                                            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="hapus" Foreground="#FF1800FF"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            <Grid Height="30" Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Button x:Name="btnConfirm" Height="30" Grid.Column="0" Grid.Row="0" Content="MASUKKAN" Click="btnConfirm_Click"/>
                <Button x:Name="btnCancel" Height="30" Grid.Column="2" Grid.Row="0" Content="BATAL" Click="btnCancel_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Page>
